# API Settings
PROJECT_NAME="Research Paper RAG API"
API_V1_STR="/api/v1"

# SQLite
DATABASE_URL = "sqlite:///./data/db.sqlite3"

# FAISS
FAISS_INDEX_TYPE=Flat
FAISS_NLIST=100
FAISS_M=32

# Embedding Model
EMBEDDING_MODEL_NAME=nomic-embed-text:latest

# LLM
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_API_KEY=API_KEY_HERE
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNK_STRATEGY=section_aware

# Search
ARXIV_MAX_RESULTS=50
RETRIEVAL_TOP_K=5
USE_RERANKING=true
RERANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Logging
LOG_LEVEL=INFO